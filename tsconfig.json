{
  "compilerOptions": {
    "declarationDir": "dist/types",
    "target": "es6",
    "module": "es2015",
    "rootDir": "./src/js",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [ "./jest/types" ]
  },
  "include": [ "src/**/*.ts" ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts"
  ]
}
